@model EFDBFirstApp.Models.Product

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 text-center">
                <h2 class="text-danger mb-4">Delete Product</h2>

                <p class="fs-5">Are you sure you want to delete <strong class="text-dark">@Model.ProductName</strong>?</p>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                }

                <a href="@Url.Action("Index")" class="btn btn-secondary mt-3 w-100">Cancel</a>
            </div>
        </div>
    </div>
</div>
