@model IEnumerable<EFDBFirstApp.Models.Product>

@{
    ViewBag.Title = "Product List";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Product List</h2>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.Brand.BrandName</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", new { id = item.ProductID })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
