@model IEnumerable<EFDBFirstApp.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-4">
    <h2 class="text-center mb-4">Product List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@Url.Content(item.ImagePath)" alt="Product Image" width="60" height="60" class="img-thumbnail" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td class="align-middle">@item.ProductName</td>
                        <td class="align-middle">$@item.Price</td>
                        <td class="align-middle">@item.Category.CategoryName</td>
                        <td class="align-middle">@item.Brand.BrandName</td>
                        <td class="align-middle">
                            <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <a href="@Url.Action("Details", new { id = item.ProductID })" class="btn btn-info btn-sm mx-1">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger btn-sm mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Create")" class="btn btn-success">Add New Product</a>
    </div>
</div>
