@model EFDBFirstApp.Models.Product

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Product Details</h2>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Product Name:</strong> @Model.ProductName</li>
                    <li class="list-group-item"><strong>Price:</strong> @Model.Price</li>
                    <li class="list-group-item"><strong>Category:</strong> @Model.Category.CategoryName</li>
                    <li class="list-group-item"><strong>Brand:</strong> @Model.Brand.BrandName</li>
                </ul>

                <div class="text-center mt-4">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
