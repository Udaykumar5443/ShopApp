@model EFDBFirstApp.Models.UsersProduct

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Register</h2>

                @using (Html.BeginForm(new { @class = "needs-validation" }))
                {
                    <div class="mb-3">
                        <label class="form-label">Username:</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter your username" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password:</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Register</button>
                }

                <p class="text-center mt-3">
                    @Html.ActionLink("Already have an account? Login here", "Login", null, new { @class = "text-decoration-none" })
                </p>
            </div>
        </div>
    </div>
</div>
